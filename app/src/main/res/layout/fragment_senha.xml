<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSenha"
    android:background="#E3FFF0">

    <LinearLayout
        android:id="@+id/linerlayoutredefinirsenha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Imageseta"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Voltar"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/seta" />


        <TextView
            android:id="@+id/textviewRedefinirsenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redefinir senha"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="70sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="20sp"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/EdittextEMAIL"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Insira seu email"
            android:textColorHint="#99000000"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/EdittextSENHA"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nova senha"
            android:textColorHint="#99000000"
            android:inputType="number"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/EdittextCONFIRMASENHA"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Confirmar senha"
            android:textColorHint="#99000000"
            android:inputType="number"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/buttnFINALIZAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="@color/black"
            android:text="Finalizar"
            android:textSize="20sp"
            android:layout_marginTop="20sp"/>


    </LinearLayout>




</FrameLayout>
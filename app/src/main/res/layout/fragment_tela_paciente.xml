<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTelaPaciente">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/viewlinha"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_anchorGravity="bottom|center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />

    <ImageView
        android:id="@+id/Imagepacienteprincipal"
        android:layout_width="327dp"
        android:layout_height="193dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:contentDescription="Imagem pricipal"
        android:src="@drawable/pacienteprincipal"
        app:layout_constraintTop_toBottomOf="@id/viewlinha"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/LinearlayoutIMAGENS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Imagepacienteprincipal"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/Imagediario"
            android:layout_width="97dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/diario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.274" />

        <ImageView
            android:id="@+id/Imagegrafico"
            android:layout_width="97dp"
            android:layout_height="48dp"
            android:layout_marginStart="44dp"
            android:src="@drawable/grafico"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Imagediario"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.269" />

        <ImageView
            android:id="@+id/Imagesesseoes"
            android:layout_width="97dp"
            android:layout_height="48dp"
            android:layout_marginStart="44dp"
            android:src="@drawable/sessoes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Imagegrafico"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.269" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearlayoutTEXTVIEWS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/LinearlayoutIMAGENS"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textviewdiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:text="Diário"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textViewGrafico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:text="Relatórios"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSessoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:text="Sessões"
            android:textColor="@color/black"
            android:textStyle="bold"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
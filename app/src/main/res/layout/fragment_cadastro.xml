<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registros.FragmentCadastro"
    android:background="#E3FFF0">

    <LinearLayout
        android:id="@+id/linerlayoutcadastro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:id="@+id/toolbar_Cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:navigationIcon="@drawable/img_voltar"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:id="@+id/linearLayout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView_Cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastre-se"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/EdittextNOME"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Digite seu nome"
                android:inputType="text"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/EdittextNASCIMENTO"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Digite sua data de nascimento"
                android:inputType="date"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/EdittextTELEFONE"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Digite seu telefone"
                android:inputType="phone"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/EdittextEMAIL"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Insira seu email"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/EdittextSENHA"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Senha"
                android:inputType="number"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/EdittextCONFIRMASENHA"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Confirmar senha"
                android:inputType="number"
                android:background="@drawable/bg_edit_text"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttnCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalizar"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:backgroundTint="@null"
                android:background="@drawable/bg_btn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="20dp"
                android:padding="5dp"
                android:text="By clicking continue, you agree to our Terms of Service and Privacy Policy"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>